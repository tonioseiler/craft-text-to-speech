{
  "name": "furbo/craft-text-to-speech",
  "description": "The Text-to-Speech Plugin is a powerful tool designed to bring enhanced accessibility and user engagement to your Craft CMS website. With this plugin, you can effortlessly convert written content into natural-sounding speech, creating an inclusive experience for users who prefer or require audio content.",
  "type": "craft-plugin",
  "license": "mit",
  "support": {
    "email": "support@furbo.ch",
    "homepage": "https://www.furbo.ch",
    "issues": "https://github.com/tonioseiler/craft-text-to-speech/issues?state=open",
    "source": "https://github.com/tonioseiler/craft-text-to-speech",
    "docs": "https://github.com/tonioseiler/craft-text-to-speech",
    "rss": "https://github.com/tonioseiler/craft-text-to-speech/releases.atom"
  },
  "require": {
    "php": ">=8.2",
    "craftcms/cms": "^5.4.0",
    "google/cloud-text-to-speech": "^1.12.1"
  },
  "require-dev": {
    "craftcms/ecs": "dev-main",
    "craftcms/phpstan": "dev-main"
  },
  "autoload": {
    "psr-4": {
      "furbo\\crafttexttospeech\\": "src/"
    }
  },
  "extra": {
    "handle": "text-to-speech",
    "name": "Google Text‐to‐Speech AI",
    "developer": "Furbo GmbH",
    "documentationUrl": "https://github.com/tonioseiler/craft-text-to-speech",
    "class": "furbo\\crafttexttospeech\\TextToSpeech"
  },
  "scripts": {
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --ansi --fix",
    "phpstan": "phpstan --memory-limit=1G"
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.2"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  }
}